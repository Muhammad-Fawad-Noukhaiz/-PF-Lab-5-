#include <stdio.h>

int main() {
    
    int a,b,c,r;
    
    printf("Enter Your Attendance");
    scanf("%d",&a);
    
    printf("Enter Your Assignment Score");
    scanf("%d",&b);
    
    printf("Enter Your Exam Score");
    scanf("%d",&c);
    
    if (a<75) {
        printf("Your Attendance is not Enough");
    }
    
    else {
        r = (b*0.4)+(c*0.6);
    }
    
    if (r<=100&&r>=90) {
        printf("Your Grade is A+");
    }
    else if (r<90&&r>=80) {
        printf("Your Grade is A");
    }
    else if (r<80&&r>=70) {
        printf("Your Grade is B");
    }
    else if (r<70&&r>=60) {
        printf("Your Grade is C");
    }
    else if (r<60&&r>=50) {
        printf("Your Grade is D");
    }
    else if (r<50&&r>=40) {
        printf("Your Grade is E");
    }
    else if (r<40&&r>=0) {
        printf("Your Grade is F(Fail)");
    }
    else {
        printf("Invalid Input");
    }

    return 0;
}
